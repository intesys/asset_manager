!!!
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}/
    %title Dummy App - Asset Manager
    %meta{content: 'width=device-width, initial-scale=1.0', name: 'viewport'}/
    %meta{content: '', name: 'description'}/
    %meta{content: '', name: 'author'}/
    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags
    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    / HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="../assets/js/html5shiv.js"></script>
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %button.btn.btn-navbar{data: {target: '.nav-collapse', toggle: 'collapse'}, type: 'button'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{href: root_path} Dummy App
          .nav-collapse.collapse
            %ul.nav
              %li{ class: "#{controller_name == 'posts' ? 'active' : ''}"}
                %a{href: posts_path} Posts
              %li{ class: "#{controller_name == 'products' ? 'active' : ''}"}
                %a{href: products_path} Products
            %ul.nav.pull-right
              %li
                %a.asset_manager_iframe{href: asset_manager_path} Manage Assets
    .container
      = yield
    = javascript_include_tag 'application'