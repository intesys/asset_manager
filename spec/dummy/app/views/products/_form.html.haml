= semantic_form_for @product, multipart: true, namespace: 'post' do |f|
  -#= f.error_messages
  = f.inputs 'General' do
    = f.input :title
    = f.input :description, input_html: { rows: 3 }
  = f.inputs 'Assets' do
    = f.input :main_image, as: :asset_manager
    = f.input :pictures, as: :asset_manager
    = f.input :downloads, as: :asset_manager
  = f.actions
