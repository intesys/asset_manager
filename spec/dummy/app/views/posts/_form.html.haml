= semantic_form_for @post, multipart: true, namespace: 'post' do |f|
  -#= f.error_messages
  = f.inputs 'General' do
    = f.input :title
    = f.input :sub_title
  = f.inputs 'AM Associations' do
    = f.input :main_image, as: :asset_manager
    = f.input :images, as: :asset_manager
    = f.input :main_file, as: :asset_manager
    = f.input :files, as: :asset_manager
    = f.input :not_singulars, as: :asset_manager
    = f.input :not_plural, as: :asset_manager
  = f.actions
