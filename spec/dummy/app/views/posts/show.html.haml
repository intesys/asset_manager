%p#notice= notice

%p
  %b Title:
  = @post.title
%p
  %b Sub title:
  = @post.sub_title
%p
  %b Main image:
  = am_render(@post, :main_image, version: :show)
%p
  %b Pictures:
  = am_render(@post, :pictures, version: :thumb)
%p
  %b Main Card:
  = am_render(@post, :main_card)
%p
  %b Downloads:
  = am_render(@post, :downloads)

= link_to 'Edit', edit_post_path(@post)
\|
= link_to 'Back', posts_path
