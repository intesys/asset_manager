%p#notice= notice

%p
  %b Title:
  = @post.title
%p
  %b Sub title:
  = @post.sub_title

%fieldset
  %legend File
  - @post.class.file_fields.each do |field|
    %p
      %b= "#{field}:"
      = @post.send(field).id rescue ''

%fieldset
  %legend Media
  - @post.class.files_fields.each do |field|
    %p
      %b= "#{field}:"
      = @post.send(field).map(&:id) rescue '[]'

= link_to 'Edit', edit_post_path(@post)
\|
= link_to 'Back', posts_path
