%p#notice= notice

%p
  %b Title:
  = @post.title
%p
  %b Sub title:
  = @post.sub_title
%p
  %b Main image:
  = am_render(@post, :main_image, version: :show)
%p
  %b Images:
  = am_render(@post, :images, version: :thumb)
%p
  %b Main file:
  = am_render(@post, :main_file)
%p
  %b Files:
  = am_render(@post, :files)
%p
  %b Not singulars:
  = am_render(@post, :not_singulars)
%p
  %b Not plural:
  = am_render(@post, :not_plural)

= link_to 'Edit', edit_post_path(@post)
\|
= link_to 'Back', posts_path
